pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "hello world"
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean test'
            }
        }

        stage('Smoketest') {
                    steps {
                       // Pass command line arguments to Maven using a bat step in Windows
                       bat 'mvn test -Dcucumber.options="--tags @smoketest"'
                    }
        }



    }
}
